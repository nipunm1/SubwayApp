<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/sub_bevrage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LearnMoreActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#9249A529"
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp">

    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="368dp"
        android:layout_height="202dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#B2FFFFFF"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.161">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q.When a customer ask you what is the saving he shall in a meal combo,what would you reply?"
            android:textColor="#000"
            android:textSize="30dp" />

    </androidx.cardview.widget.CardView>

    <RadioGroup
        android:id="@+id/rg2"
        android:layout_width="match_parent"
        android:layout_height="248dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView4"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="2dp">

        <androidx.cardview.widget.CardView
            android:layout_width="400dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:backgroundTint="#B2FFFFFF"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <RadioButton
                android:textColor="#000"
                android:id="@+id/rb1"
                android:button="@drawable/custome_rg1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Sir,if you order a bevrage and a cookie it costs Rs.80 and Rs.55.On a meal combo you can save Rs.50 by paying Rs.85 extra." />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="#B2FFFFFF"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">
            <RadioButton
                android:textColor="#000"
                android:id="@+id/rb2"
                android:button="@drawable/custome_rg1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Sir there is no changes.There is no benefits in meal combo." />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="400dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_gravity=""
            android:backgroundTint="#B2FFFFFF"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">
            <RadioButton
                android:textColor="#000"
                android:id="@+id/rb3"
                android:button="@drawable/custome_rg1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Sir you would save Rs.100" />

        </androidx.cardview.widget.CardView>

    </RadioGroup>


    <ImageButton
        android:id="@+id/previousbtn3"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="96dp"
        android:src="@drawable/previousarrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.162"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rg"
        app:layout_constraintVertical_bias="0.076" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3">

        <androidx.cardview.widget.CardView
            android:layout_width="95dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:backgroundTint="#B2FFFFFF"
            app:cardCornerRadius="2dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">
            <ImageButton
                android:layout_width="match_parent"
                android:id="@+id/homeimagebtn"
                android:src="@drawable/home"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:backgroundTint="#B2FFFFFF"
            app:cardCornerRadius="2dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <ImageButton
                android:id="@+id/personimagebtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/person" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="95dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:backgroundTint="#B2FFFFFF"
            app:cardCornerRadius="2dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <ImageButton
                android:id="@+id/crossimagebtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/cross" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>